<%- include('partials/header'); -%>

    <div class="container h-100 p-5">
        <%- include('partials/error'); -%>
            <div class="d-flex justify-content-between">
                <a href="/" class="btn btn-dark mb-3 ms-2"><i class="fa-solid fa-chevron-left"></i></a>

                <h1 class="d-inline"><i class="fa-solid fa-person-running"></i> Workouts </h1>

                <a href="/workouts/new" class="btn btn-dark mb-3 ms-2"><i class="fas fa-plus-circle"></i></a>
            </div>
            <div class="row d-flex justify-content-center mt-5">
                <% var i=0; %>
                    <% workouts.forEach(function(workout){ i++ %>
                        <div class="col-sm-12 col-md-6 col-lg-4 mb-5">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a class="text-dark" href="/assignments/<%= workout.id %>">
                                            <%= workout.title %>
                                        </a> 
                                        <a href="/workouts/<%= workout.id %>" class="btn btn-dark float-end">
                                            <i class="fas fa-chevron-circle-right"></i>
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                        <%= workout.description %>
                                    </p>
                                </div>
                                <div class="card-footer d-flex justify-content-between">
                                    <span class="push-left">
                                        <%= workout.created.toUTCString() %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <% }) %>
            </div>
    </div>

    <%- include('partials/footer'); -%>